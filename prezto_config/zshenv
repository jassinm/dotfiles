export PATH="/usr/local/bin/":$PATH
export PATH="/Library/TeX/texbin":$PATH
#export PATH="/usr/local/texlive/2020basic/bin/x86_64-darwin"
export PATH="/usr/local/opt/openssl@1.1/bin":$PATH

export WORKON_HOME="/Users/locojay/.virtualenvs"


export LDFLAGS="-L/usr/local/opt/openssl@1.1/lib -L/usr/local/opt/zlib/lib"
export CPPFLAGS="-I/usr/local/opt/openssl@1.1/include  -L/usr/loca/opt/zlib/include"


export GNUPGHOME=~/.gnupg/trezor

# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ "$SHLVL" -eq 1 && ! -o LOGIN && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi
